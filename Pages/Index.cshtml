@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center fade-in-up">
                <h1 class="hero-title">
                    Basic Modern Dotnet WebApp
                </h1>
                <p class="hero-subtitle">
                    Experience the power of modern web development with ASP.NET Core. 
                    Built for performance, designed for developers.
                </p>
                <div class="mt-4">
                    <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn-modern me-3">
                        <i class="fas fa-rocket me-2"></i>Get Started
                    </a>
                    <a href="#features" class="btn-outline-modern">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="container">
    <div class="row text-center mb-5">
        <div class="col-lg-8 mx-auto fade-in-up">
            <h2 class="display-5 fw-bold mb-3">Why Choose Modern Development?</h2>
            <p class="lead text-muted">Discover the features that make our platform the perfect choice for your next project.</p>
        </div>
    </div>
    
    <div class="row stagger-animation">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3 class="card-title">Lightning Fast</h3>
                <p class="card-text">
                    Built with performance in mind. Experience blazing-fast load times and smooth interactions
                    that keep your users engaged.
                </p>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h3 class="card-title">Responsive Design</h3>
                <p class="card-text">
                    Looks perfect on every device. Our responsive design ensures your application works
                    seamlessly across desktop, tablet, and mobile.
                </p>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="card-title">Secure & Reliable</h3>
                <p class="card-text">
                    Built with security best practices. Your data and users are protected with enterprise-grade
                    security features.
                </p>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-code"></i>
                </div>
                <h3 class="card-title">Developer Friendly</h3>
                <p class="card-text">
                    Clean, maintainable code with modern development practices. Easy to extend and customize
                    for your specific needs.
                </p>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-cloud"></i>
                </div>
                <h3 class="card-title">Cloud Ready</h3>
                <p class="card-text">
                    Deploy anywhere with confidence. Optimized for cloud platforms with scalable architecture
                    and modern deployment practices.
                </p>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="modern-card text-center">
                <div class="card-icon mx-auto">
                    <i class="fas fa-heart"></i>
                </div>
                <h3 class="card-title">Built with Love</h3>
                <p class="card-text">
                    Crafted with attention to detail and user experience in mind. Every interaction is designed
                    to delight and engage your users.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <div class="modern-card">
                <h3 class="mb-3">Ready to Get Started?</h3>
                <p class="text-muted mb-4">
                    Join thousands of developers who are already building amazing applications with modern web technologies.
                </p>
                <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="btn-modern">
                    <i class="fas fa-play me-2"></i>Start Your Journey
                </a>
            </div>
        </div>
    </div>
</section>
